<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal">

        <android.support.v4.widget.CircleImageView
            android:id="@+id/circ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/userpic" />
        <TextView android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Candidate Name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_dashboard_white_24dp" />
</LinearLayout>

<LinearLayout
android:id="@+id/linearLayout2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
app:layout_constraintStart_toStartOf="parent"
tools:layout_editor_absoluteY="107dp">

<ImageView
    android:id="@+id/contact"
    android:layout_width="90dp"
    android:layout_height="60dp"
    android:background="@color/white"
    android:clickable="true"
    android:src="@drawable/ic_contacts_black_24dp" />

<ImageView
    android:id="@+id/chat"
    android:layout_width="90dp"
    android:layout_height="70dp"
    android:layout_marginLeft="55dp"
    android:background="@color/white"
    android:clickable="true"
    android:src="@drawable/ic_chat_black_24dp" />

<ImageView
    android:id="@+id/about"
    android:layout_width="90dp"
    android:layout_height="60dp"
    android:layout_marginLeft="55dp"
    android:background="@color/white"
    android:clickable="true"
    android:src="@drawable/ic_supervisor_account_black_24dp" />
</LinearLayout>

<ScrollView
android:layout_width="match_parent"
android:layout_height="371dp"
android:layout_marginBottom="8dp"
android:layout_marginTop="8dp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/multiLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="contacts"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="231dp" />
        <EditText
            android:id="@+id/multiLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="chats"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="231dp" />
        <EditText
            android:id="@+id/multiLine3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="about"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="231dp" />

    </ViewFlipper>
</LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>